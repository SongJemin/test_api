<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_marginVertical="5dp"
    android:background="#ffffff"
    >

    <TextView
        android:id="@+id/tv_content_item_comment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="댓글 내용"
        android:layout_marginStart="30dp"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:layout_toLeftOf="@+id/tv_date_time_item_comment"
        />
    <TextView
        android:id="@+id/tv_date_time_item_comment"
        android:layout_width="100dp"
        android:layout_height="match_parent"
        android:text="시간"
        android:gravity="center"
        android:layout_toLeftOf="@+id/btn_close_item_comment"
        android:textColor="#000000"
        />
    <Button
        android:id="@+id/btn_close_item_comment"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:text="삭제"
        android:background="#000000"
        android:textColor="#ffffff"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        />

</RelativeLayout>